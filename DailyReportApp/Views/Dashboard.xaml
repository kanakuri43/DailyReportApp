<UserControl x:Class="DailyReportApp.Views.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>



        <TextBlock Text="作業日報"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    FontSize="24"
                    HorizontalAlignment="Center" FontFamily="Arial Black"/>

        <Grid Grid.Row="1"
              Width="235">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0"
                    Content="日報入力"
                    FontSize="16"
                    Command="{Binding RegisterReportCommand}" />

            <Button Grid.Row="1"
                    Content="日報検索"
                        FontSize="16"
                        Command="{Binding FindReportCommand}" />


            <StackPanel Grid.Row="3"
                        Height="30"
                        Orientation="Horizontal">
                <ComboBox />
                <TextBlock Text="年" VerticalAlignment="Center"/>
                <ComboBox />
                <TextBlock Text="月"  VerticalAlignment="Center"/>

            </StackPanel>
            <ListBox Grid.Row="4"/>

        </Grid>

    </Grid>
</UserControl>
