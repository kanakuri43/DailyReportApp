<UserControl x:Class="DailyReportApp.Views.RegisterReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Background="White" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <TextBlock Text="日報入力"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    FontSize="24"
                    HorizontalAlignment="Center" FontFamily="Arial Black"/>
        <StackPanel Grid.Row="1" 
                        HorizontalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="日付"
                           VerticalAlignment="Center"/>
                <DatePicker Grid.Row="0" Grid.Column="1"
                            SelectedDate="{Binding ReportDate}"
                            VerticalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="作成者"
                           VerticalAlignment="Center"/>
                <ComboBox  Grid.Row="1" Grid.Column="1"
                           SelectedValuePath="SelectedValue"
                           DisplayMemberPath="DisplayMember"
                           ItemsSource="{Binding Employees}"
                           SelectedValue="{Binding AuthorId}"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="作業"
                           VerticalAlignment="Center"/>
                <ComboBox  Grid.Row="2" Grid.Column="1"
                           SelectedValuePath="SelectedValue"
                           DisplayMemberPath="DisplayMember"
                           ItemsSource="{Binding WorkContents}"
                           SelectedValue="{Binding WorkContentId}"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="担当"
                           VerticalAlignment="Center"/>
                <ListBox   Grid.Row="3" Grid.Column="1"
                           SelectionMode="Multiple"
                           SelectedValuePath="Id"
                           DisplayMemberPath="Name"
                           ItemsSource="{Binding Workers}"
                           VerticalAlignment="Center">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem"
                               BasedOn="{StaticResource MahApps.Styles.ListBoxItem}" >
                            <Setter Property="IsSelected" Value="{Binding Selected}" />
                        </Style>
                    </ListBox.ItemContainerStyle>

                </ListBox>

                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="作業時間"
                           VerticalAlignment="Center"/>
                <TextBox  Grid.Row="4" Grid.Column="1"
                          Text="{Binding WorkingHours}"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="使用機械"
                           VerticalAlignment="Center"/>
                <ComboBox  Grid.Row="5" Grid.Column="1"
                           SelectedValuePath="SelectedValue"
                           DisplayMemberPath="DisplayMember"
                           ItemsSource="{Binding Machines}"
                           SelectedValue="{Binding MachineId}"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="6" Grid.Column="0"
                           Text="コメント"
                           VerticalAlignment="Center"/>
                <TextBox  Grid.Row="6" Grid.Column="1"
                          TextWrapping="Wrap"
                          Text="{Binding Notes}"
                          AcceptsReturn="True"/>
            </Grid>


            <StackPanel Orientation="Horizontal">
                <Button Content="登録"
                        Width="100"
                        FontSize="16"
                        IsDefault="True"
                        Command="{Binding RegisterCommand}" />
                <Button Content="キャンセル"
                        Width="100"
                        FontSize="16"
                        Margin="10,0,0,0"
                        IsDefault="True"
                        Command="{Binding CancelCommand}" />

            </StackPanel>


        </StackPanel>

    </Grid>
</UserControl>
